<h2>Admins</h2>
<% if @admins.present? %>
    <table border="4" >
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th></th>
      </tr>

<% @admins.each do |admin| %>
    <tr>
      <td><%= admin.first_name %></td>
      <td><%= admin.last_name %></td>
      <td><%= admin.email %></td>
      <% if !(admin.email == "admin@ncsu.edu") && !(admin == current_admin) %>
        <td><%= link_to 'Delete Admin', admin, method: :delete, data: { confirm: "Are you sure you want to delete the admin?" } %></td>
        <% else %>
        <td><td/>
      <%end%>
      <br>
    </tr>
<% end %>

</table>
<br/>
<%= paginate @admins %>
<%= page_entries_info @admins %>
<br/><br/>
<% else %>
    <p>There are currently no other admins in the library %></p>
<% end %>