<%= form_tag(books_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search,params[:search], placeholder: "Search Books", :size => "30" %>
    <%= submit_tag "Search", name: nil  %>
<% end %>

<br/>
<p><%= link_to "View all books", :books %></p>
<%if admin_logged_in? %>
    <p><%= link_to "View all users", :users %></p>
    <p><%= link_to "Add book", new_book_path %></p>
    <p><%= link_to "Add another admin", new_admin_path %></p>
    <p><%= link_to "View all admins", :admins %></p>
    <p><%= link_to "View all book recommendations", recommended_books_path %></p>
<%end%>