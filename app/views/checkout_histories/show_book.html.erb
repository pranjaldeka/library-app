<h1><%= @book.title %></h1>
<p><%= "ISBN : " + @book.isbn %></p>
<p><%= "Author : " + @book.author %></p>
<p><%= "Description : " + @book.description %></p>
<p><%= "Status : " + @book.status %>

<h2>Checkout history</h2>
<%if not @book.checkout_histories.first.nil? %>
    <% @book.checkout_histories.order("issued_at DESC").each do |val| %>
        <p><%= val.user.first_name%> <%=val.user.last_name%></p>
        <p><%= val.user.email %></p>
        <p><%= val.issued_at %></p>
        <p><%= val.returned_at %></p>
    <% end %>
<% else %>
    <p>Nothing to show!</p>
<% end %>
<%= link_to "Back", @book %>
