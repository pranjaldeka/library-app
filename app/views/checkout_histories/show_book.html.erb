
<h1><%= @book.title %></h1>
<p><%= "ISBN : " + @book.isbn %></p>
<p><%= "Authors : " + @book.author %></p>
<p><%= "Description : " + @book.description %></p>
<p><%= "Status : " + @book.status %>

<h2>Checkout history</h2>
<%if not @book.checkout_histories.first.nil? %>
   <table border="4" >
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Issued at</th>
        <th>Returned at</th>
      </tr>
    <% @book.checkout_histories.order("issued_at DESC").each do |val| %>
    <tr>
        <td><%= val.user.first_name + " " + val.user.last_name %></td>
        <td><%= val.user.email %></td>
        <td><%= val.issued_at %></td>
        <td><%= val.returned_at %></td>
    </tr>
    <% end %>
  </table>
<% else %>
    <p>Nothing to show!</p>
<% end %>
<br/>
<%= link_to "Back", @book %>
